{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/esm",
    "moduleResolution": "node",
  },
  "include": [
    "./src"
  ],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts",
    "./examples/**/*"
  ]
}
